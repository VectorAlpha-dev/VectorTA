---
import BaseLayout from '../layouts/BaseLayout.astro';
import { AnimatedCounter } from '../components/ui/AnimatedCounter';
import ScrollReveal from '../components/ui/ScrollReveal.astro';
import { WasmDemo } from '../components/demo/WasmDemo';
import { MABacktester } from '../components/demo/MABacktester';
import HeroBackground from '../components/ui/HeroBackground.astro';

const implementedIndicators = 178;
const totalIndicators = 300;
---

<BaseLayout title="Home">
  <div class="content-container">
    <!-- Hero Section -->
    <ScrollReveal animation="fade">
      <section class="relative text-center py-16 mb-12">
        <HeroBackground />
        <h1 class="text-5xl sm:text-6xl font-bold mb-6 gradient-text">
          VectorTA
        </h1>
        <p class="text-xl sm:text-2xl text-muted-foreground max-w-3xl mx-auto mb-8">
          High-performance technical analysis library with {totalIndicators}+ indicators, 
          powered by Rust and WebAssembly
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a 
            href="/indicators" 
            class="btn btn-primary text-lg px-8 py-3"
            aria-label="Browse all technical indicators"
          >
            Browse Indicators
          </a>
          <a 
            href="#demo" 
            class="btn btn-secondary text-lg px-8 py-3"
            aria-label="Try the interactive demo"
          >
            Try Demo
          </a>
        </div>
        
        <div class="flex justify-center gap-8 sm:gap-12">
          <div class="text-center">
            <p class="text-3xl sm:text-4xl font-bold text-primary">
              <AnimatedCounter end={implementedIndicators} client:visible />
            </p>
            <p class="text-sm text-muted-foreground mt-1">Implemented</p>
          </div>
          <div class="text-center">
            <p class="text-3xl sm:text-4xl font-bold text-muted-foreground">
              <AnimatedCounter end={totalIndicators - implementedIndicators} client:visible />
            </p>
            <p class="text-sm text-muted-foreground mt-1">Coming Soon</p>
          </div>
        </div>
      </section>
    </ScrollReveal>

    <!-- Features Section -->
    <ScrollReveal animation="slide-up" delay={100}>
      <section class="mb-16" aria-labelledby="features-heading">
        <h2 id="features-heading" class="text-3xl font-bold text-center mb-12">
          Why Choose VectorTA?
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <ScrollReveal animation="scale" delay={200}>
            <div class="card text-center">
              <div class="w-16 h-16 bg-primary/10 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Blazing Fast</h3>
              <p class="text-muted-foreground">
                Native performance through WebAssembly, processing millions of data points in milliseconds
              </p>
            </div>
          </ScrollReveal>
          
          <ScrollReveal animation="scale" delay={300}>
            <div class="card text-center">
              <div class="w-16 h-16 bg-primary/10 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Battle-Tested</h3>
              <p class="text-muted-foreground">
                Thoroughly tested with comprehensive test coverage and real-world validation
              </p>
            </div>
          </ScrollReveal>
          
          <ScrollReveal animation="scale" delay={400}>
            <div class="card text-center">
              <div class="w-16 h-16 bg-primary/10 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Comprehensive Docs</h3>
              <p class="text-muted-foreground">
                Detailed documentation for every indicator with examples and use cases
              </p>
            </div>
          </ScrollReveal>
        </div>
      </section>
    </ScrollReveal>

    <!-- Demo Section -->
    <ScrollReveal animation="fade">
      <section id="demo" class="mb-16 scroll-mt-20" aria-labelledby="demo-heading">
        <h2 id="demo-heading" class="text-3xl font-bold text-center mb-12">
          Experience the Performance
        </h2>
        
        <div class="max-w-6xl mx-auto">
          <MABacktester client:visible />
        </div>
      </section>
    </ScrollReveal>

    <!-- Getting Started Section -->
    <ScrollReveal animation="slide-up">
      <section class="py-12 border-t border-border" aria-labelledby="getting-started-heading">
        <h2 id="getting-started-heading" class="text-3xl font-bold text-center mb-12">
          Getting Started
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <div class="text-center">
            <div class="text-4xl mb-4" aria-hidden="true">1</div>
            <h3 class="font-semibold mb-2">Install</h3>
            <p class="text-sm text-muted-foreground">
              Add VectorTA to your project with your favorite package manager
            </p>
          </div>
          
          <div class="text-center">
            <div class="text-4xl mb-4" aria-hidden="true">2</div>
            <h3 class="font-semibold mb-2">Import</h3>
            <p class="text-sm text-muted-foreground">
              Import the indicators you need from the library
            </p>
          </div>
          
          <div class="text-center">
            <div class="text-4xl mb-4" aria-hidden="true">3</div>
            <h3 class="font-semibold mb-2">Calculate</h3>
            <p class="text-sm text-muted-foreground">
              Pass your data and get results at lightning speed
            </p>
          </div>
        </div>
        
        <div class="mt-12 text-center">
          <a 
            href="/indicators" 
            class="btn btn-primary"
            aria-label="Explore the complete indicator reference"
          >
            Explore Indicators
          </a>
        </div>
      </section>
    </ScrollReveal>
  </div>
</BaseLayout>