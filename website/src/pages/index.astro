---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BacktestChart } from '../components/charts/BacktestChart';
import { indicators } from '../data/indicator-registry';

// Get featured indicators
const featuredIds = ['sma', 'rsi', 'macd', 'bollinger_bands', 'stoch', 'atr'];
const featuredIndicators = featuredIds.map(id => ({
  id,
  ...indicators[id as keyof typeof indicators]
})).filter(Boolean);

// Count indicators by category
const categoryCount = Object.values(indicators).reduce((acc, indicator) => {
  acc[indicator.category] = (acc[indicator.category] || 0) + 1;
  return acc;
}, {} as Record<string, number>);
---

<BaseLayout title="Home">
  <div class="max-w-7xl mx-auto">
    <section class="text-center py-12">
      <h1 class="text-5xl font-bold mb-4">
        Technical Analysis Indicators
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        Explore {Object.keys(indicators).length}+ technical indicators with interactive charts and real-time calculations
      </p>
      
      <div class="flex justify-center space-x-4 mb-8">
        <a 
          href="/indicators/sma" 
          class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          Browse Indicators
        </a>
        <a 
          href="https://github.com" 
          target="_blank"
          class="px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-900 transition-colors"
        >
          View on GitHub
        </a>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {Object.entries(categoryCount).slice(0, 8).map(([category, count]) => (
          <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-4">
            <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{count}</div>
            <div class="text-sm text-gray-600 dark:text-gray-400 capitalize">
              {category.replace(/_/g, ' ')}
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Moving Average Crossover Strategy Demo</h2>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <BacktestChart client:only="react" />
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-bold mb-6">Featured Indicators</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredIndicators.map(indicator => (
          <a 
            href={`/indicators/${indicator.id}`}
            class="block p-6 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-lg transition-shadow"
          >
            <h3 class="text-xl font-semibold mb-2">{indicator.name}</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
              {indicator.description || `Explore the ${indicator.name} indicator with interactive charts and customizable parameters.`}
            </p>
            <div class="flex items-center text-blue-600 dark:text-blue-400 text-sm">
              Learn more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <section class="mt-16 mb-8 text-center">
      <h2 class="text-2xl font-bold mb-4">Getting Started</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div>
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Choose an Indicator</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Browse through our extensive collection of technical indicators organized by category.
          </p>
        </div>
        <div>
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Adjust Parameters</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Fine-tune indicator parameters with our interactive controls to match your trading style.
          </p>
        </div>
        <div>
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Analyze Results</h3>
          <p class="text-gray-600 dark:text-gray-400">
            View real-time charts and understand how each indicator works with detailed documentation.
          </p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>