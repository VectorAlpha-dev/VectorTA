---
import Layout from '../../layouts/Layout.astro';
import TradingChart from '../../lib/components/TradingChart.astro';
import { indicatorCategories } from '../../lib/astro-stores';
import { getIndicatorOverview } from '../../lib/indicatorDescriptions';
import { getPythonExample } from '../../lib/pythonExamples';

export async function getStaticPaths() {
	const allIndicators = Object.values(indicatorCategories).flat();
	
	return allIndicators.map((indicator) => ({
		params: { slug: indicator.id },
		props: { indicator }
	}));
}

const { indicator } = Astro.props;
const description = getIndicatorOverview(indicator.id) || 'No description available.';
const pythonExample = getPythonExample(indicator.id) || 'No Python example available.';
---

<Layout title={`${indicator.name} - Rust-Backtester`} description={indicator.description}>
	<div class="indicator-page">
		<div class="container">
			<div class="indicator-header">
				<h1>{indicator.name}</h1>
				<p class="indicator-category">Category: {indicator.category}</p>
				<p class="indicator-description">{indicator.description}</p>
			</div>

			<div class="content-grid">
				<section class="description-section">
					<h2>Description</h2>
					<div class="description-content" set:html={description}></div>
				</section>

				<section class="parameters-section">
					<h2>Parameters</h2>
					{indicator.parameters.length > 0 ? (
						<div class="parameters-list">
							{indicator.parameters.map((param) => (
								<div class="parameter-item">
									<strong>{param.name}</strong> ({param.type})
									<span class="default-value">Default: {param.default}</span>
									<p>{param.description}</p>
								</div>
							))}
						</div>
					) : (
						<p>This indicator has no configurable parameters.</p>
					)}
				</section>

				<section class="usage-section">
					<h2>Usage Example</h2>
					<div class="code-block">
						<pre><code>{pythonExample}</code></pre>
					</div>
				</section>

				<section class="chart-section">
					<h2>Interactive Chart</h2>
					<TradingChart indicatorId={indicator.id} parameters={indicator.parameters} />
				</section>
			</div>
		</div>
	</div>
</Layout>

<style>
	.indicator-page {
		min-height: 100vh;
		padding: 2rem 0;
		background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.indicator-header {
		text-align: center;
		margin-bottom: 3rem;
		padding: 3rem 2rem;
		background: white;
		border-radius: 16px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(10px);
	}

	.indicator-header h1 {
		font-size: 3rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.indicator-category {
		color: #6c757d;
		font-size: 1.1rem;
		text-transform: uppercase;
		letter-spacing: 2px;
		margin-bottom: 1.5rem;
		font-weight: 600;
	}

	.indicator-description {
		font-size: 1.3rem;
		color: #495057;
		max-width: 800px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.content-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.chart-section {
		grid-column: 1 / -1;
	}

	section {
		background: rgba(255, 255, 255, 0.9);
		padding: 2.5rem;
		border-radius: 16px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	section h2 {
		color: #2d3748;
		margin-bottom: 1.5rem;
		font-size: 1.8rem;
		font-weight: 600;
		position: relative;
		padding-bottom: 1rem;
	}

	section h2::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 60px;
		height: 4px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border-radius: 2px;
	}

	.parameters-list {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.parameter-item {
		padding: 1.5rem;
		background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
		border-radius: 12px;
		border-left: 4px solid #667eea;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.parameter-item:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
	}

	.parameter-item strong {
		color: #2d3748;
		font-size: 1.2rem;
		font-weight: 600;
	}

	.default-value {
		color: #667eea;
		font-size: 0.9rem;
		margin-left: 0.5rem;
		font-weight: 500;
	}

	.code-block {
		background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
		color: #e2e8f0;
		padding: 2rem;
		border-radius: 12px;
		overflow-x: auto;
		font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', monospace;
		box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	@media (max-width: 768px) {
		.content-grid {
			grid-template-columns: 1fr;
		}
		
		.indicator-header h1 {
			font-size: 2.5rem;
		}

		.indicator-header {
			padding: 2rem 1rem;
		}

		section {
			padding: 2rem;
		}
	}

	@media (max-width: 480px) {
		.indicator-header h1 {
			font-size: 2rem;
		}

		section {
			padding: 1.5rem;
		}
	}
</style>