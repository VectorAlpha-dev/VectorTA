---
import IndicatorLayout from '../../layouts/IndicatorLayout.astro';

const indicatorId = 'aroon';
const indicatorName = 'Aroon';
const description = `Create a new streaming Aroon indicator. The Aroon indicator identifies trend changes and the strength of a trend.`;
const parameters = [
  {
    "name": "period",
    "type": "number",
    "default": 14,
    "min": 2,
    "max": 200,
    "description": "Lookback period"
  }
];
---

<IndicatorLayout
  indicatorId={indicatorId}
  indicatorName={indicatorName}
  description={description}
  parameters={parameters}
>
  <h2>Overview</h2>
  <p>{description}</p>

  <h2>How it works</h2>
  <p>The Aroon helps traders identify potential trading opportunities by analyzing price patterns and market conditions.</p>

  <h2>Parameters</h2>
  <ul>
    <li><strong>period</strong>: Lookback period (default: 14)</li>
  </ul>

  <h2>Interpretation</h2>
  <p>Traders use the Aroon to make informed decisions about entry and exit points.</p>

  <h2>Example Usage</h2>
  <pre><code class="language-rust">
// Example of using Aroon in Rust
let result = indicators::aroon(&data, 14);
  </code></pre>
</IndicatorLayout>