---
export interface Props {
  title: string;
  signals: Array<{
    condition: string;
    description: string;
    action: 'buy' | 'sell' | 'caution';
  }>;
}

const { title, signals } = Astro.props;

const actionColors = {
  buy: 'text-green-900 dark:text-green-100',
  sell: 'text-red-900 dark:text-red-100',
  caution: 'text-yellow-900 dark:text-yellow-100'
};

const actionBgColors = {
  buy: 'bg-green-50 dark:bg-green-950/30 border-green-200 dark:border-green-800',
  sell: 'bg-red-50 dark:bg-red-950/30 border-red-200 dark:border-red-800',
  caution: 'bg-yellow-50 dark:bg-yellow-950/30 border-yellow-200 dark:border-yellow-800'
};
---

<div class="not-prose p-4 rounded-lg my-4 border bg-blue-50 dark:bg-blue-950/30 border-blue-200 dark:border-blue-800">
  <h4 class="font-semibold mb-3 text-lg text-blue-900 dark:text-blue-100">{title}:</h4>
  <ul class="space-y-2" role="list">
    {signals.map((signal) => (
      <li class="flex items-start gap-2">
        <span class="mt-1.5 w-2 h-2 rounded-full bg-current flex-shrink-0 text-gray-400 dark:text-gray-400" aria-hidden="true"></span>
        <div>
          <strong class={actionColors[signal.action]}>
            {signal.condition}:
          </strong>
          <span class="text-gray-700 dark:text-gray-300">
            {signal.description}
          </span>
        </div>
      </li>
    ))}
  </ul>
</div>