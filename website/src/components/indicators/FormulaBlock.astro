---
export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="not-prose bg-gray-100 dark:bg-gray-800 p-4 rounded-lg my-4 border border-gray-200 dark:border-gray-700">
  {title && <h4 class="font-semibold mb-2 text-gray-900 dark:text-gray-100">{title}</h4>}
  <div class="font-mono text-sm text-gray-800 dark:text-gray-200 space-y-1">
    <slot />
  </div>
</div>

<style>
  /* Ensure proper formatting for mathematical expressions */
  div :global(br) {
    display: block;
    content: "";
    margin-top: 0.25rem;
  }
  
  div :global(code) {
    @apply bg-gray-200 dark:bg-gray-700 px-1 py-0.5 rounded text-xs;
  }
</style>